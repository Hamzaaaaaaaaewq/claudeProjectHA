{
  "name": "@syriamart/frontend",
  "version": "1.0.0",
  "description": "SyriaMart Frontend - Progressive Web Application",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lighthouse": "lhci autorun",
    "bundle-analyze": "ANALYZE=true next build",
    "check:bundle": "node scripts/check-bundle-size.js",
    "check:arabic": "node scripts/check-arabic-typography.js",
    "percy": "percy snapshot ./out",
    "prepare": "if [ -z \"$CI\" ]; then husky install; fi || true",
    "pre-commit": "lint-staged",
    "validate": "npm run type-check && npm run lint && npm run test && npm run check:bundle",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:rtl": "vitest run --config vitest.rtl.config.ts",
    "test:a11y": "vitest run --config vitest.a11y.config.ts",
    "test:contrast": "node scripts/test-contrast.js",
    "test:keyboard": "playwright test tests/keyboard.spec.ts",
    "test:screen-reader": "playwright test tests/screen-reader.spec.ts",
    "test:visual": "percy exec -- playwright test tests/visual.spec.ts",
    "test:visual:rtl": "percy exec -- playwright test tests/visual-rtl.spec.ts",
    "test:e2e:web": "playwright test",
    "a11y:report": "node scripts/generate-a11y-report.js",
    "lighthouse:ci": "lhci autorun",
    "build:analyze": "ANALYZE=true next build",
    "complexity:check": "node scripts/check-complexity.js"
  },
  "dependencies": {
    "next": "14.2.25",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tanstack/react-query": "^5.17.9",
    "zustand": "^4.4.7",
    "axios": "^1.6.5",
    "zod": "^3.22.4",
    "react-hook-form": "^7.48.2",
    "@hookform/resolvers": "^3.3.4",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "dayjs": "^1.11.10",
    "react-hot-toast": "^2.4.1",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.303.0",
    "next-themes": "^0.2.1",
    "next-intl": "^3.4.5",
    "sharp": "^0.33.2",
    "workbox-window": "^7.0.0",
    "@sentry/nextjs": "^7.91.0",
    "web-vitals": "^3.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.25",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "vitest": "^1.6.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/jest-dom": "^6.2.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "jsdom": "^23.2.0",
    "@playwright/test": "^1.40.1",
    "@storybook/react": "^7.6.7",
    "@storybook/react-vite": "^7.6.7",
    "@storybook/addon-essentials": "^7.6.7",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/addon-a11y": "^7.6.7",
    "@storybook/test": "^7.6.7",
    "@lhci/cli": "^0.13.0",
    "@next/bundle-analyzer": "^14.1.0",
    "@percy/cli": "^1.27.6",
    "@percy/playwright": "^1.0.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "gzip-size": "^6.0.0",
    "glob": "^10.3.10"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}