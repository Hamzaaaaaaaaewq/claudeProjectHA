{
  "name": "syriamart",
  "version": "1.0.0",
  "description": "Syrian E-Commerce Platform",
  "private": true,
  "scripts": {
    "dev": "echo 'Use npm run dev in specific workspace'",
    "build": "npm run build --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "validate:openapi": "node scripts/validate-openapi.js",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "type-check": "echo 'Run type-check in specific workspace'",
    "test:coverage": "echo 'Run test:coverage in specific workspace'",
    "complexity:check": "echo 'Run complexity:check in specific workspace'"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/[your-username]/syriamart.git"
  },
  "author": "SyriaMart Team",
  "license": "PROPRIETARY"
}